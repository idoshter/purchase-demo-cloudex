FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /app
COPY . /app

RUN pip install --no-cache-dir -U pip \
 && pip install --no-cache-dir -r requirements.txt

# Cloud Run injects PORT. We will respect it.
ENV PORT=8000
EXPOSE 8000

# IMPORTANT: keep all writable state in /tmp
ENV PROCUREMENT_DB_PATH=/tmp/procurement.db
ENV HOME=/tmp

# Start ADK API server (backend service)
CMD ["bash", "-lc", "adk web --host 0.0.0.0 --port ${PORT} /app"]

